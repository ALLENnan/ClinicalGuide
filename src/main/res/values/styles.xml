<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@color/app_bg_gray</item>-->
    </style>

    <style name="app_style_view_split_hori_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0px</item>
        <item name="android:background">#ffdedede</item>
    </style>

    <style name="app_style_item_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_color_gray</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/common_selector_item</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="app_list">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="tab_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@drawable/main_tab_textcolor</item>
        <item name="android:textSize">@dimen/main_bottom_tab</item>
    </style>

    <style name="tab_linear_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:paddingTop">6dip</item>
    </style>

    <style name="tab_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
</resources>
