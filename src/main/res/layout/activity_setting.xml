<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg_gray"
              android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <include layout="@layout/common_split"/>

    <LinearLayout
        android:id="@+id/feedback_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/common_selector_item"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@mipmap/ic_arrow_right_gray"
            android:padding="12dp"
            android:text="意见反馈"
            android:textColor="@color/dark_gray"/>

    </LinearLayout>

    <include layout="@layout/common_split"/>

    <LinearLayout
        android:id="@+id/about_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_selector_item"
        android:enabled="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:drawableRight="@mipmap/ic_arrow_right_gray"
            android:padding="12dp"
            android:text="关于我们"
            android:textColor="@color/dark_gray"/>
    </LinearLayout>
    
</LinearLayout>