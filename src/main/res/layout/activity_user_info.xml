<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg_gray"
              android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <include layout="@layout/common_split"/>

    <LinearLayout
        android:id="@+id/nickname_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/common_selector_item"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="昵称"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:id="@+id/nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:textColor="@color/app_color_gray"
            android:textSize="12sp"/>
    </LinearLayout>

    <include layout="@layout/common_split"/>

    <LinearLayout
        android:id="@+id/phone_num_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_selector_item"
        android:enabled="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:padding="12dp"
            android:text="手机号"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:id="@+id/phone_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:textColor="@color/app_color_gray"
            android:textSize="12sp"/>
    </LinearLayout>


</LinearLayout>