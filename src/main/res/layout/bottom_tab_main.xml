<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main_bottom"
              android:layout_width="match_parent"
              android:layout_height="@dimen/main_bottom_height"
              android:background="@android:color/white"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/btn_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/main_selector_home"
        android:gravity="center"
        android:paddingBottom="4dip"
        android:paddingTop="6dip"
        android:text="首页"
        android:textColor="@drawable/main_tab_textcolor"
        android:textSize="@dimen/main_bottom_tab"/>

    <TextView
        android:id="@+id/btn_retrieve"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/main_selector_retrieve"
        android:gravity="center"
        android:paddingBottom="4dip"
        android:paddingTop="6dip"
        android:text="检索"
        android:textColor="@drawable/main_tab_textcolor"
        android:textSize="@dimen/main_bottom_tab"/>

    <TextView
        android:id="@+id/btn_category"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/main_selector_category"
        android:gravity="center"
        android:onClick="onTabSelect"
        android:paddingBottom="4dip"
        android:paddingTop="6dip"
        android:text="分类"
        android:textColor="@drawable/main_tab_textcolor"
        android:textSize="@dimen/main_bottom_tab"/>

    <TextView
        android:id="@+id/btn_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/main_selector_me"
        android:gravity="center"
        android:onClick="onTabSelect"
        android:paddingBottom="4dip"
        android:paddingTop="6dip"
        android:text="我"
        android:textColor="@drawable/main_tab_textcolor"
        android:textSize="@dimen/main_bottom_tab"/>

</LinearLayout>